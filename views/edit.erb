  <form method="post" action="/todos/<%= @id %>/edit">
    <input type="hidden" name="_method" value="put" />
    <fieldset>
      <label for="todo">Edit <%= @todotext %> to:</label>
      <br>
      <input type="text" name="todo" id="todo" value="<%= @todotext %>" autofocus required>
    </fieldset>
    <input type="submit" value="Edit">
  </form>
